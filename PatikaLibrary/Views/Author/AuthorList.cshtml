
@model List<AuthorListViewModel>
<a asp-controller="Author" asp-action="Create" class="btn btn-success mt-5 mb-3"> Create Author</a>

@foreach(var author in Model)
{
    <div class="card mt-3" style="width: 35rem;">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">First Name: @author.FirstName</li>
            <li class="list-group-item">Last Name: @author.LastName </li>
            
            <div>
                <a asp-controller="Author" asp-action="Details" asp-route-id="@author.Id" class="btn btn-secondary"> Detay</a>
                <a asp-controller="Author" asp-action="Delete" asp-route-id="@author.Id" class="btn btn-danger"> Sil</a>
                <a asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id" class="btn  btn-primary">Düzenle</a>

            </div>

        </ul>
    </div>
}